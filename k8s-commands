#useful k8s commands:
---------------------
sudo systemctl status docker
minikube start
minikube status
Kubectl create -f pod.yml
kubectl get pods 
kubectl get pods -n my-ns
kubectl create -f first-deployment.yml
kubectl get pods -o wide
kubectl decribe pod nginx
kubectl desribe pods
kubectl delete pod nginx
kubectl get all //list all resources.
kubectl get pods -w //live status of the pods.
kubectl get pods -n my-ns -w //-n namespace
kubectl logs my-pod
kubectl get nodes --show-labels
kubectl set image deployment/ubuntu-deployment ubuntu-container=ubuntu:20.04
kubectl scale deployment ubuntu-deployment --replicas=5
kubectl scale deployment ubuntu-deployment --replicas=2
kubectl rollout undo deployment/ubuntu-deployment
kubectl rollout status deployment/ubuntu-deployment
kubectl rollout history deployment/ubuntu-deployment


